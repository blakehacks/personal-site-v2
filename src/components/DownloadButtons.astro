---
const { file = '/LivesAndFates.pdf' } = Astro.props;
---

<div
  style="
    display:flex;
    justify-content:center;
    align-items:center;
    gap:1.25rem;
    flex-wrap:wrap;
    margin:2rem auto;
    max-width:1000px;
    text-align:center;
  "
>
  <a
    href={file}
    download
    class="btn btn--primary"
    aria-label="Download PDF"
    style="
      display:inline-flex;align-items:center;justify-content:center;gap:.6rem;
      padding:1rem 1.75rem;border-radius:9999px;text-decoration:none;
      font-weight:700;font-size:1.1rem;letter-spacing:.3px;
    "
  >⬇️ Download the PDF</a>

  <a
    href={file}
    target="_blank"
    rel="noopener"
    class="btn btn--ghost"
    aria-label="Open PDF in new tab"
    style="
      display:inline-flex;align-items:center;justify-content:center;gap:.6rem;
      padding:1rem 1.75rem;border-radius:9999px;text-decoration:none;
      font-weight:700;font-size:1.1rem;letter-spacing:.3px;
    "
  >Open it in a new tab</a>
</div>

<style>
:global(a.btn){
  background:#fff;
  color:#111;
  border:2px solid #e7e7e7;
  box-shadow:0 3px 12px rgba(0,0,0,.08);
  transform:translateZ(0);
  transition:transform .18s ease, box-shadow .18s ease, background .18s ease, border-color .18s ease;
}
:global(a.btn.btn--primary){
  background:#e13b31;
  color:#fff;
  border:none;
  box-shadow:0 4px 16px rgba(225,59,49,.25);
}

:global(a.btn:hover),
:global(a.btn:focus-visible){
  transform:translateY(-2px) scale(1.04);
  outline:2px solid transparent; /* keeps layout stable */
}
:global(a.btn.btn--primary:hover){
  box-shadow:0 10px 28px rgba(225,59,49,.35);
  background:#d03129;
}
:global(a.btn.btn--ghost:hover){
  box-shadow:0 6px 20px rgba(0,0,0,.12);
  border-color:#d0d0d0;
  background:#fafafa;
}

:global(a.btn.btn--back:hover){
  transform:translateY(-2px) scale(1.03);
  box-shadow:0 6px 18px rgba(0,0,0,.12);
  background:#fafafa;
  border-color:#ccc;
}


/* Mobile sizing */
@media (max-width:640px){
  :global(a.btn){ font-size:1.1rem; padding:1.2rem 2rem; }
}
</style>
