---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

const { title, description = "Blake Maczka's personal website" } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<slot />
		</main>
	</body>

	<style>
		main {
			display: flex;
			flex-direction: column;
			align-items: center;
			padding: 2em 1em;
		}
		
		main h1 {
			margin-bottom: 1.5em;
		}
		
		@media (max-width: 720px) {
			.books-title {
				text-align: center !important;
				width: 100%;
				display: flex;
				justify-content: center;
			}
		}
		
		main ul {
			padding: 0;
			display: flex;
		}
		
		main li {
			margin-bottom: 0.5em;
			font-size: 1.2em;
			text-align: left;
			width: fit-content;
		}
	</style>
</html>
