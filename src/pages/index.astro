---
import HomeLayout from '../layouts/HomeLayout.astro';
const NAME = 'Blake Maczka';
---

<HomeLayout title="Home">
  <main class="home">
    <a href="/about" class="nametag" aria-label="Go to About page">
      <svg
        class="tag-svg"
        viewBox="0 0 600 400"
        role="img"
        aria-labelledby="title desc"
      >
        <desc id="desc">Red name-tag sticker with the name centered.</desc>

        <!-- Rounded card -->
        <rect x="10" y="10" rx="28" ry="28" width="580" height="380" fill="#e13b31"/>

        <!-- White band -->
        <rect x="10" y="130" width="580" height="160" fill="#ffffff"/>

        <!-- "Hello" -->
        <text x="300" y="90" text-anchor="middle"
              font-family="'Kalam', 'Caveat', 'Dancing Script', cursive"
              font-weight="700" font-size="96" fill="#ffffff" letter-spacing="2">
          Hello
        </text>

        <!-- "my name is" -->
        <text x="300" y="125" text-anchor="middle"
              font-family="'Kalam', 'Caveat', 'Dancing Script', cursive"
              font-weight="500" font-size="38" fill="#ffeceb" letter-spacing="1">
          my name is
        </text>

        <!-- Name -->
        <text x="300" y="250" text-anchor="middle"
              font-family="'Kalam', 'Caveat', 'Dancing Script', cursive"
              font-weight="700" font-size="68" fill="#222" letter-spacing="1"
              style="paint-order: stroke; stroke: #fff; stroke-width: 4; font-feature-settings: 'ss01' 1, 'ss02' 1;">
          {NAME}
        </text>
      </svg>
    </a>
  </main>

  <style>
    .home {
      height: calc(100vh - var(--site-header-height, 64px));
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 85px 0 0 0;
      box-sizing: border-box;
      margin: 0;
      max-width: none;
      width: 100%;
    }

    .nametag {
      display: inline-block;
      transform: translateZ(0) scale(1);
      transition: transform 200ms ease, box-shadow 200ms ease;
      will-change: transform;
      outline: none;
      border-radius: 1.75rem;s
    }

    .nametag:hover,
    .nametag:focus-visible {
      transform: scale(1.15);
    }

    .tag-svg {
      width: clamp(260px, 70vw, 640px);
      height: auto;
      display: block;
    }

    @media (prefers-reduced-motion: reduce) {
      .nametag { transition: none; }
    }
  </style>
</HomeLayout>
