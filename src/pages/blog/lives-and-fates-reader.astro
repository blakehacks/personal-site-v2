---
import Layout from '../../layouts/BaseLayout.astro'
import PdfReader from '../../components/PdfReader.jsx';
const FILE = '/LivesAndFates.pdf';
---

<Layout title="Read Lives and Fates">
  <main style="padding: 1rem;">
    <!-- Centered button group -->
    <div
      style="
        display:flex;
        justify-content:center;
        align-items:center;
        gap:1.25rem;
        flex-wrap:wrap;
        margin:2rem auto;
        max-width:1000px;
        text-align:center;
      "
    >
      <!-- Primary button -->
      <a
        href={FILE}
        download
        class="btn btn--primary"
        aria-label='Download PDF'
        style="
          display:inline-flex;
          align-items:center;
          justify-content:center;
          gap:.6rem;
          padding:1rem 1.75rem;
          border-radius:9999px;
          text-decoration:none;
          font-weight:700;
          font-size:1.1rem;
          letter-spacing:.3px;
          background:#e13b31;
          color:#fff;
          box-shadow:0 4px 16px rgba(225,59,49,.25);
          transform:translateZ(0);
        "
      >
        ⬇️ Download PDF
      </a>

      <!-- Secondary button -->
      <a
        href={FILE}
        target="_blank"
        rel="noopener"
        class="btn btn--ghost"
        aria-label='Open PDF in new tab'
        style="
          display:inline-flex;
          align-items:center;
          justify-content:center;
          gap:.6rem;
          padding:1rem 1.75rem;
          border-radius:9999px;
          text-decoration:none;
          font-weight:700;
          font-size:1.1rem;
          letter-spacing:.3px;
          background:#fff;
          color:#111;
          border:2px solid #e7e7e7;
          box-shadow:0 3px 12px rgba(0,0,0,.08);
          transform:translateZ(0);
        "
      >
        Open in new tab
      </a>
    </div>

    <PdfReader url={FILE} client:load />
  </main>

  <style>
    /* Subtle motion and hover shadows (desktop only) */
    @media (hover: hover) and (pointer: fine) {
      .btn {
        transition: transform 180ms ease, box-shadow 180ms ease, background 180ms ease;
      }

      .btn:hover,
      .btn:focus-visible {
        transform: translateY(-2px) scale(1.04);
      }

      .btn--primary:hover {
        box-shadow: 0 10px 28px rgba(225,59,49,.35);
        background: #d03129;
      }

      .btn--ghost:hover {
        box-shadow: 0 6px 20px rgba(0,0,0,.12);
        border-color: #d0d0d0;
        background: #fafafa;
      }
    }

    /* Touch-friendly size on mobile */
    @media (max-width: 640px) {
      .btn {
        font-size: 1.1rem;
        padding: 1.2rem 2rem;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .btn { transition: none; }
    }
  </style>
</Layout>
